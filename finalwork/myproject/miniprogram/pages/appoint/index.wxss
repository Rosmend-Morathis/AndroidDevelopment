/* pages/appoint/index.wxss */
.roomView{
    width: 100%;
    height: 200rpx;
    position: relative;
    display:flex; 
    flex-direction: row;
    box-sizing: border-box;
    justify-content: space-between;
    margin-top: 30rpx;
    margin-bottom: 30rpx;
    border-bottom: 2rpx solid rgb(50,150,250,0.5);
    /* border: 1rpx solid red; */
}
.roomIcon{
    width: 150rpx;
    height: 120rpx;
    /* border: 1rpx solid red; */
    margin-top: 40rpx;
    margin-left: 50rpx;
}
.roomIcon image{
    display: block;
    width: 100%;
    height: 100%;
    margin:auto;
}

.roomName{
    margin-top: 60rpx;
    margin-left: 40rpx;
    width: 100%;
    height: 60rpx;
    font-size: 52rpx;
    align-content: center;
    justify-content: center;
    /* border: 1rpx solid blue */
}
.roomState{
    width: 100%;
    height: 40rpx;
    font-size: 24rpx;
    /* border: 1rpx solid red; */
    padding-bottom: 10rpx;
    padding-left: 20rpx;
}

.roomTime{
    /* border: 1rpx solid red; */
    width: 100%;
    height: 520rpx;
    margin-top: 50rpx;
    border-bottom: 2rpx solid rgb(50,150,250,0.5);
}
.roomTimeItem{
    width: 80%;
    height: 120rpx;
    display: flex;
    flex-direction: column;
    border: 1rpx dashed rgb(50,150,250,0.5);
    border-radius: 30rpx;
    padding-left: 50rpx;
    margin: 40rpx 50rpx;
    font-size: 42rpx;
    justify-content: center;
}
.itemText{
    display: flex;
    flex-direction: row;
}
.timeText{
    width: 200rpx;
    /* border: 1rpx solid red; */
}
.timeData{
    border: 1rpx solid rgb(50,150,250,0.1);
    background-color: #f6f6f6;
}

.homeBtnView{
    margin-top: 80rpx;
}
.homeBtnView button{
    width: 80%;
}
.homeBtnView .aptBtn{
    background-color: rgb(50,150,250);
}